<Window x:Class="WpfApp1.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="POS System Dashboard" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Bar -->
        <Border Grid.Row="0" Background="#1CB5E0" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🏪 POS Management System" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="UserInfoTextBlock" 
                               Text="Welcome, Admin" 
                               FontSize="16" 
                               Foreground="#E3F2FD" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Logout" 
                            Width="100" 
                            Height="35" 
                            Background="#FC5C7D" 
                            Foreground="White" 
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content with left nav -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Nav -->
            <Border Grid.Column="0" Background="#263238">
                <StackPanel>
                    <TextBlock Text="Management" Foreground="#ECEFF1" FontWeight="Bold" Margin="16,20,0,10"/>
                    <ListBox x:Name="NavList" SelectionChanged="NavList_SelectionChanged" Background="Transparent" BorderThickness="0" Foreground="#ECEFF1">
                        <ListBoxItem Content="Home" IsSelected="True"/>
                        <ListBoxItem Content="Products"/>
                        <ListBoxItem Content="Categories"/>
                        <ListBoxItem Content="Customers"/>
                        <ListBoxItem Content="Invoices"/>
                        <ListBoxItem Content="Reports"/>
                        <ListBoxItem Content="Settings"/>
                        <ListBoxItem Content="Logout"/>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Right Content -->
            <Grid Grid.Column="1">
                <ScrollViewer x:Name="DefaultContentScrollViewer" VerticalScrollBarVisibility="Auto">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                <!-- KPI Cards -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="White" CornerRadius="16" Padding="20" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Revenue (Today)" Foreground="#777"/>
                            <TextBlock x:Name="RevenueTodayText" Text="$0" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Background="White" CornerRadius="16" Padding="20" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Revenue (30 days)" Foreground="#777"/>
                            <TextBlock x:Name="Revenue30Text" Text="$0" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Background="White" CornerRadius="16" Padding="20" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Invoices (Today)" Foreground="#777"/>
                            <TextBlock x:Name="InvoicesTodayText" Text="0" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="3" Background="White" CornerRadius="16" Padding="20" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Customers / Products" Foreground="#777"/>
                            <TextBlock x:Name="CountsText" Text="0 / 0" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Home charts -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="White" CornerRadius="16" Padding="12" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Revenue (Last 30 Days)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <oxy:PlotView x:Name="HomeRevenuePlot" Height="220"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Background="White" CornerRadius="16" Padding="12" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Revenue by Category" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <oxy:PlotView x:Name="HomeCategoryPie" Height="220"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Module Grid -->
                <Grid Grid.Row="2" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Product Management -->
                    <Border Grid.Row="0" Grid.Column="0" 
                            Background="White" 
                            CornerRadius="20" 
                            Margin="10" 
                            Padding="25">
                        <Button Style="{StaticResource {x:Type Button}}" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="ProductManagement_Click">
                            <StackPanel>
                                <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock Text="Product Management" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="#1CB5E0" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Add, edit, and manage products. Organize by categories with detailed information." 
                                           FontSize="14" 
                                           Foreground="#666666" 
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    
                    <!-- Category Management -->
                    <Border Grid.Row="0" Grid.Column="1" 
                            Background="White" 
                            CornerRadius="20" 
                            Margin="10" 
                            Padding="25">
                        <Button Style="{StaticResource {x:Type Button}}" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="CategoryManagement_Click">
                            <StackPanel>
                                <TextBlock Text="📂" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock Text="Category Management" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="#1CB5E0" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Create and organize product categories for better inventory management." 
                                           FontSize="14" 
                                           Foreground="#666666" 
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    
                    <!-- Customer Management -->
                    <Border Grid.Row="1" Grid.Column="0" 
                            Background="White" 
                            CornerRadius="20" 
                            Margin="10" 
                            Padding="25">
                        <Button Style="{StaticResource {x:Type Button}}" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="CustomerManagement_Click">
                            <StackPanel>
                                <TextBlock Text="👥" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock Text="Customer Management" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="#1CB5E0" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Store and manage customer information including contact details and preferences." 
                                           FontSize="14" 
                                           Foreground="#666666" 
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    
                    <!-- Invoice Management -->
                    <Border Grid.Row="1" Grid.Column="1" 
                            Background="White" 
                            CornerRadius="20" 
                            Margin="10" 
                            Padding="25">
                        <Button Style="{StaticResource {x:Type Button}}" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="InvoiceManagement_Click">
                            <StackPanel>
                                <TextBlock Text="🧾" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock Text="Invoice Management" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="#1CB5E0" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Create sales invoices, add products, calculate totals and manage transactions." 
                                           FontSize="14" 
                                           Foreground="#666666" 
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    
                    <!-- Reports & Statistics -->
                    <Border Grid.Row="2" Grid.Column="0" 
                            Background="White" 
                            CornerRadius="20" 
                            Margin="10" 
                            Padding="25">
                        <Button Style="{StaticResource {x:Type Button}}" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="ReportsManagement_Click">
                            <StackPanel>
                                <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock Text="Reports &amp; Statistics" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="#1CB5E0" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="View sales reports, revenue analytics, and business insights with detailed statistics." 
                                           FontSize="14" 
                                           Foreground="#666666" 
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    
                    <!-- User Management (Admin only) -->
                    <Border x:Name="UserManagementBorder" Grid.Row="2" Grid.Column="1" 
                            Background="White" 
                            CornerRadius="20" 
                            Margin="10" 
                            Padding="25">
                        <Button Style="{StaticResource {x:Type Button}}" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="UserManagement_Click">
                            <StackPanel>
                                <TextBlock Text="👥" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock Text="Quản Lý Người Dùng" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="#E91E63" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Thêm, sửa, xóa người dùng và phân quyền trong hệ thống." 
                                           FontSize="14" 
                                           Foreground="#666666" 
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>

                <!-- Settings -->
                <Border Grid.Row="3" Grid.Column="0" 
                        Background="White" 
                        CornerRadius="20" 
                        Margin="10" 
                        Padding="25">
                    <Button Style="{StaticResource {x:Type Button}}" 
                            Background="Transparent" 
                            BorderThickness="0"
                            Click="Settings_Click">
                        <StackPanel>
                            <TextBlock Text="⚙️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Cài Đặt" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="#1CB5E0" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Cấu hình hệ thống, cài đặt ứng dụng và tùy chọn." 
                                       FontSize="14" 
                                       Foreground="#666666" 
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Demo Section -->
                <Border Grid.Row="3" Grid.Column="1" 
                        Background="White" 
                        CornerRadius="20" 
                        Margin="10" 
                        Padding="25">
                    <Button Style="{StaticResource {x:Type Button}}" 
                            Background="Transparent" 
                            BorderThickness="0"
                            Click="DemoInvoice_Click">
                        <StackPanel>
                            <TextBlock Text="🎯" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Demo Invoice" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="#FF9800" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="View a sample professional invoice with the new design." 
                                       FontSize="14" 
                                       Foreground="#666666" 
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>
                </Border>
                    </Grid>
                </ScrollViewer>
                <ContentControl x:Name="MainContentHost" Visibility="Collapsed"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
