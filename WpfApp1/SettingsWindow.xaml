<Window x:Class="WpfApp1.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cài Đặt" Height="520" Width="760"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1CB5E0" Padding="16">
            <TextBlock Text="⚙️ Cài Đặt"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" Margin="24" Background="White" CornerRadius="14" Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Cấu Hình Cơ Sở Dữ Liệu"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#1CB5E0"
                           Margin="0,0,0,12"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Máy chủ MySQL:" VerticalAlignment="Center"/>
                    <TextBox x:Name="ServerTextBox" Grid.Row="0" Grid.Column="1" Height="32"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Cơ sở dữ liệu:" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox x:Name="DatabaseTextBox" Grid.Row="1" Grid.Column="1" Height="32" Margin="0,8,0,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Tên đăng nhập:" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox x:Name="UserIdTextBox" Grid.Row="2" Grid.Column="1" Height="32" Margin="0,8,0,0"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Mật khẩu:" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <PasswordBox x:Name="PasswordBox" Grid.Row="3" Grid.Column="1" Height="32" Margin="0,8,0,0"/>

                    <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                        <Button x:Name="TestConnectionButton" Content="Kiểm Tra Kết Nối" Width="140" Height="34" Margin="0,0,8,0" Click="TestConnectionButton_Click"/>
                        <Button x:Name="SaveSettingsButton" Content="Lưu" Width="100" Height="34" Background="#4CAF50" Foreground="White" Click="SaveSettingsButton_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <TextBlock x:Name="StatusTextBlock" Grid.Row="2" Text="" Foreground="#666" HorizontalAlignment="Center" Margin="0,0,0,12"/>
        
        <!-- Reset Data Section -->
        <Border Grid.Row="2" Background="#FFF3CD" CornerRadius="8" Padding="16" Margin="24,0,24,12">
            <StackPanel>
                <TextBlock Text="🔄 Quản Lý Dữ Liệu Mẫu" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="#856404" 
                           Margin="0,0,0,8"/>
                <TextBlock Text="Nếu dữ liệu mẫu bị trùng lặp hoặc lỗi, bạn có thể xóa và tạo lại." 
                           FontSize="12" 
                           Foreground="#856404" 
                           Margin="0,0,0,12"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="CheckStatusButton" 
                            Content="🔍 Kiểm Tra Trạng Thái" 
                            Background="#17A2B8" 
                            Foreground="White" 
                            Padding="12,8" 
                            BorderThickness="0" 
                            Click="CheckStatusButton_Click"
                            Margin="0,0,12,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="CreateDataNowButton" 
                            Content="⚡ Tạo Dữ Liệu Ngay" 
                            Background="#FF6B35" 
                            Foreground="White" 
                            Padding="12,8" 
                            BorderThickness="0" 
                            Click="CreateDataNowButton_Click"
                            Margin="0,0,12,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="TestAddProductButton" 
                            Content="🔧 Test Thêm Sản Phẩm" 
                            Background="#FF9800" 
                            Foreground="White" 
                            Padding="12,8" 
                            BorderThickness="0" 
                            Click="TestAddProductButton_Click"
                            Margin="0,0,12,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="ResetDataButton" 
                            Content="🗑️ Xóa Dữ Liệu Mẫu" 
                            Background="#DC3545" 
                            Foreground="White" 
                            Padding="12,8" 
                            BorderThickness="0" 
                            Click="ResetDataButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
