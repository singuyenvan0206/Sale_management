<Window x:Class="WpfApp1.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm/Sửa Người Dùng" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#E91E63" Padding="16">
            <TextBlock x:Name="HeaderText" Text="➕ Thêm Người Dùng" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="30" Margin="20,16,20,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Username -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Tên đăng nhập:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox" 
                             Height="40" 
                             FontSize="16"
                             VerticalContentAlignment="Center"
                             Padding="10,0"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <TextBlock Text="Mật khẩu:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Height="40" 
                                 FontSize="16"
                                 VerticalContentAlignment="Center"
                                 Padding="10,0"/>
                </StackPanel>

                <!-- Confirm Password -->
                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <TextBlock Text="Xác nhận mật khẩu:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                 Height="40" 
                                 FontSize="16"
                                 VerticalContentAlignment="Center"
                                 Padding="10,0"/>
                </StackPanel>

                <!-- Role -->
                <StackPanel Grid.Row="3" Margin="0,0,0,20">
                    <TextBlock Text="Vai trò:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="RoleComboBox" 
                              Height="40" 
                              FontSize="16"
                              VerticalContentAlignment="Center"
                              Padding="10,0">
                        <ComboBoxItem Content="Thu ngân" Tag="Cashier"/>
                        <ComboBoxItem Content="Quản lý" Tag="Manager"/>
                        <ComboBoxItem Content="Quản trị viên" Tag="Admin"/>
                    </ComboBox>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorMessageText" 
                           Grid.Row="4" 
                           Foreground="#F44336" 
                           FontWeight="Bold" 
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" 
                        Content="Hủy" 
                        Width="100" 
                        Height="40" 
                        Background="#9E9E9E" 
                        Foreground="White" 
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>
                <Button x:Name="SaveButton" 
                        Content="Lưu" 
                        Width="100" 
                        Height="40" 
                        Background="#4CAF50" 
                        Foreground="White" 
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
