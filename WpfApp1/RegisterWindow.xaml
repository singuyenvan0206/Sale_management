<Window x:Class="WpfApp1.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#4FC3F7"
                                BorderThickness="2"
                                CornerRadius="16">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#4FC3F7"
                                BorderThickness="2"
                                CornerRadius="16">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    <Grid Background="#FAD2D2">
        <Border
            Width="410"
            Height="414"
            CornerRadius="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Padding="30" Margin="296,0,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1CB5E0" Offset="0.0"/>
                    <GradientStop Color="#000046" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Register" FontSize="28" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                <TextBlock Text="Username" Foreground="#CCFFFFFF" Margin="0,0,0,4"/>
                <TextBox x:Name="UsernameTextBox" Height="46" Margin="0,0,0,16"
                         Background="#F0F0F0" BorderThickness="0"/>
                <TextBlock Text="Password" Foreground="#CCFFFFFF" Margin="0,0,0,4"/>
                <PasswordBox x:Name="PasswordBox" Height="45" Margin="0,0,0,16"
                             Background="#F0F0F0" BorderThickness="0"/>
                <TextBlock Text="Confirm Password" Foreground="#CCFFFFFF" Margin="0,0,0,4"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Height="45" Margin="0,0,0,24"
                             Background="#F0F0F0" BorderThickness="0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                    <Button Content="Register"
                            Width="140"
                            Height="40"
                            FontSize="18"
                            FontWeight="Bold"
                            Background="#FF6A82FB"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,0,12,0"
                            Click="RegisterButton_Click"/>
                    <Button Content="Login"
                            Width="140"
                            Height="40"
                            FontSize="18"
                            FontWeight="Bold"
                            Background="#4FC3F7"
                            Foreground="White"
                            BorderThickness="0"
                            Click="LoginButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>