<Window x:Class="WpfApp1.InvoicePrintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invoice Print Preview" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Print Controls -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="PrintButton" Content="🖨️ Print" Width="100" Height="35" 
                        Background="#2196F3" Foreground="White" Click="PrintButton_Click" Margin="5"/>
                <Button x:Name="CloseButton" Content="❌ Close" Width="100" Height="35" 
                        Background="#F44336" Foreground="White" Click="CloseButton_Click" Margin="5"/>
            </StackPanel>
        </Border>

        <!-- Invoice Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Border Background="White" Padding="50" Margin="20">
                <Grid Width="800">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header Section -->
                    <Grid Grid.Row="0" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Company Info -->
                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="CompanyNameText" Text="YOUR COMPANY NAME" 
                                       FontSize="24" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                            <TextBlock x:Name="CompanySloganText" Text="Your Company Slogan" 
                                       FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,10"/>
                            <TextBlock x:Name="CompanyAddressText" Text="123 Business Street" 
                                       FontSize="12" Foreground="#34495E" Margin="0,0,0,2"/>
                            <TextBlock x:Name="CompanyCityText" Text="City, ZIP Code" 
                                       FontSize="12" Foreground="#34495E" Margin="0,0,0,2"/>
                            <TextBlock x:Name="CompanyPhoneText" Text="Phone: (111) 123-1234" 
                                       FontSize="12" Foreground="#34495E" Margin="0,0,0,2"/>
                            <TextBlock x:Name="CompanyFaxText" Text="Fax: (111) 123-1234" 
                                       FontSize="12" Foreground="#34495E"/>
                        </StackPanel>

                        <!-- Invoice Title -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="INVOICE" FontSize="36" FontWeight="Bold" 
                                       Foreground="#1E88E5" Margin="0,0,0,20"/>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="DATE:" FontWeight="Bold" Width="80"/>
                                    <TextBlock x:Name="InvoiceDateText" Text="November 20, 2007"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="INVOICE #" FontWeight="Bold" Width="80"/>
                                    <TextBlock x:Name="InvoiceNumberText" Text="5"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="FOR:" FontWeight="Bold" Width="80"/>
                                    <TextBlock x:Name="InvoiceForText" Text="Project or Service Description"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Billing Information -->
                    <Border Grid.Row="1" Background="#F8F9FA" Padding="15" Margin="0,0,0,20" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="BILL TO:" FontWeight="Bold" FontSize="14" 
                                       Foreground="#2C3E50" Margin="0,0,0,10"/>
                            <TextBlock x:Name="CustomerNameText" Text="Customer Name" 
                                       FontSize="12" FontWeight="Bold" Margin="0,0,0,2"/>
                            <TextBlock x:Name="CustomerCompanyText" Text="Company Name" 
                                       FontSize="12" Margin="0,0,0,2"/>
                            <TextBlock x:Name="CustomerAddressText" Text="Street Address" 
                                       FontSize="12" Margin="0,0,0,2"/>
                            <TextBlock x:Name="CustomerCityText" Text="City, ZIP Code" 
                                       FontSize="12" Margin="0,0,0,2"/>
                            <TextBlock x:Name="CustomerPhoneText" Text="Phone" 
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Items Table -->
                    <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,20">
                        <Grid>
                            <!-- Table Header -->
                            <Border Background="#1E88E5" Padding="15,10,15,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="DESCRIPTION" FontWeight="Bold" 
                                               Foreground="White" FontSize="12"/>
                                    <TextBlock Grid.Column="1" Text="HOURS" FontWeight="Bold" 
                                               Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="RATE" FontWeight="Bold" 
                                               Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="AMOUNT" FontWeight="Bold" 
                                               Foreground="White" FontSize="12" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>

                            <!-- Items List -->
                            <ItemsControl x:Name="InvoiceItemsList" Margin="0,0,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="15,10,15,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding ProductName}" 
                                                           FontSize="12" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Quantity}" 
                                                           FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="{Binding UnitPrice, StringFormat=F2}" 
                                                           FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="3" Text="{Binding LineTotal, StringFormat=F2}" 
                                                           FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>

                    <!-- Totals Section -->
                    <Grid Grid.Row="3" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left side - Notes -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Top">
                            <TextBlock Text="Make all checks payable to Your Company Name" 
                                       FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,20"/>
                        </StackPanel>

                        <!-- Right side - Totals -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <Grid Width="280">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <!-- Subtotal -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="SUBTOTAL:" 
                                           FontSize="12" HorizontalAlignment="Right" Margin="0,0,10,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SubtotalText" Text="$0.00" 
                                           FontSize="12" HorizontalAlignment="Right" Margin="0,0,0,8"/>

                                <!-- Tax Rate -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="TAX RATE:" 
                                           FontSize="12" HorizontalAlignment="Right" Margin="0,0,10,8"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TaxRateText" Text="4.50%" 
                                           FontSize="12" HorizontalAlignment="Right" Margin="0,0,0,8"/>

                                <!-- Sales Tax -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="SALES TAX:" 
                                           FontSize="12" HorizontalAlignment="Right" Margin="0,0,10,8"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="SalesTaxText" Text="$0.00" 
                                           FontSize="12" HorizontalAlignment="Right" Margin="0,0,0,8"/>

                                <!-- Other -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="OTHER:" 
                                           FontSize="12" HorizontalAlignment="Right" Margin="0,0,10,8"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="OtherText" Text="$0.00" 
                                           FontSize="12" HorizontalAlignment="Right" Margin="0,0,0,8"/>

                                <!-- Total -->
                                <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#1E88E5" 
                                        Padding="10,8,10,8" Margin="0,0,0,20" CornerRadius="3">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="TOTAL:" 
                                                   FontSize="14" FontWeight="Bold" Foreground="White" 
                                                   HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="1" x:Name="TotalText" Text="$0.00" 
                                                   FontSize="14" FontWeight="Bold" Foreground="White" 
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <!-- Thank You Message -->
                    <TextBlock Grid.Row="4" Text="THANK YOU FOR YOUR BUSINESS!" 
                               FontSize="18" FontWeight="Bold" Foreground="#1E88E5" 
                               HorizontalAlignment="Center" Margin="0,0,0,20"/>
                </Grid>
            </Border>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="10">
            <TextBlock Text="Invoice generated by POS Management System" 
                       FontSize="10" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
