<Window x:Class="WpfApp1.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Bảng Điều Khiển - Hệ Thống POS" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Bar -->
        <Border Grid.Row="0" Background="#1CB5E0" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🏪 Hệ Thống Quản Lý POS" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="UserInfoTextBlock" 
                               Text="Chào mừng, Admin" 
                               FontSize="16" 
                               Foreground="#E3F2FD" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="LogoutButton" 
                            Content="🚪 Đăng Xuất" 
                            Background="#F44336" 
                            Foreground="White" 
                            Padding="20,10" 
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <ScrollViewer x:Name="DefaultContentScrollViewer" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Quick Stats -->
                    <Border Grid.Row="0" Background="White" CornerRadius="20" Padding="25" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Today's Sales -->
                            <Border Grid.Column="0" Background="#E8F5E8" CornerRadius="15" Padding="20" Margin="10">
                                <StackPanel>
                                    <TextBlock Text="💰" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="TodaySalesText" Text="0 VND" FontSize="18" FontWeight="Bold" 
                                               Foreground="#2E7D32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="Doanh thu hôm nay" FontSize="12" Foreground="#666666" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Today's Invoices -->
                            <Border Grid.Column="1" Background="#E3F2FD" CornerRadius="15" Padding="20" Margin="10">
                                <StackPanel>
                                    <TextBlock Text="🧾" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="TodayInvoicesText" Text="0" FontSize="18" FontWeight="Bold" 
                                               Foreground="#1976D2" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="Hóa đơn hôm nay" FontSize="12" Foreground="#666666" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Total Products -->
                            <Border Grid.Column="2" Background="#FFF3E0" CornerRadius="15" Padding="20" Margin="10">
                                <StackPanel>
                                    <TextBlock Text="📦" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="TotalProductsText" Text="0" FontSize="18" FontWeight="Bold" 
                                               Foreground="#F57C00" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="Tổng sản phẩm" FontSize="12" Foreground="#666666" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Total Customers -->
                            <Border Grid.Column="3" Background="#F3E5F5" CornerRadius="15" Padding="20" Margin="10">
                                <StackPanel>
                                    <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="TotalCustomersText" Text="0" FontSize="18" FontWeight="Bold" 
                                               Foreground="#7B1FA2" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="Tổng khách hàng" FontSize="12" Foreground="#666666" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Main Functions -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Product Management -->
                        <Border Grid.Row="0" Grid.Column="0" 
                                Background="White" 
                                CornerRadius="20" 
                                Margin="10" 
                                Padding="25">
                            <Button Style="{StaticResource {x:Type Button}}" 
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    Click="ProductManagement_Click">
                                <StackPanel>
                                    <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                    <TextBlock Text="Quản Lý Sản Phẩm" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="#1CB5E0" 
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="Thêm, sửa, xóa sản phẩm và quản lý tồn kho." 
                                               FontSize="14" 
                                               Foreground="#666666" 
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>
                        </Border>
                        
                        <!-- Invoice Management -->
                        <Border Grid.Row="0" Grid.Column="1" 
                                Background="White" 
                                CornerRadius="20" 
                                Margin="10" 
                                Padding="25">
                            <Button Style="{StaticResource {x:Type Button}}" 
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    Click="InvoiceManagement_Click">
                                <StackPanel>
                                    <TextBlock Text="🧾" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                    <TextBlock Text="Quản Lý Hóa Đơn" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="#1CB5E0" 
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="Tạo hóa đơn bán hàng, thêm sản phẩm và quản lý giao dịch." 
                                               FontSize="14" 
                                               Foreground="#666666" 
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>
                        </Border>
                        
                        <!-- Reports & Statistics -->
                        <Border Grid.Row="1" Grid.Column="0" 
                                Background="White" 
                                CornerRadius="20" 
                                Margin="10" 
                                Padding="25">
                            <Button Style="{StaticResource {x:Type Button}}" 
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    Click="ReportsManagement_Click">
                                <StackPanel>
                                    <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                    <TextBlock Text="Báo Cáo & Thống Kê" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="#1CB5E0" 
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="Xem báo cáo doanh thu, phân tích kinh doanh và thống kê chi tiết." 
                                               FontSize="14" 
                                               Foreground="#666666" 
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>
                        </Border>
                        
                        <!-- User Management (Admin only) -->
                        <Border x:Name="UserManagementBorder" Grid.Row="1" Grid.Column="1" 
                                Background="White" 
                                CornerRadius="20" 
                                Margin="10" 
                                Padding="25">
                            <Button Style="{StaticResource {x:Type Button}}" 
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    Click="UserManagement_Click">
                                <StackPanel>
                                    <TextBlock Text="👥" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                    <TextBlock Text="Quản Lý Người Dùng" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="#E91E63" 
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="Thêm, sửa, xóa người dùng và phân quyền trong hệ thống." 
                                               FontSize="14" 
                                               Foreground="#666666" 
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </Grid>

                    <!-- Settings -->
                    <Border Grid.Row="2" Grid.Column="0" 
                            Background="White" 
                            CornerRadius="20" 
                            Margin="10" 
                            Padding="25">
                        <Button Style="{StaticResource {x:Type Button}}" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="Settings_Click">
                            <StackPanel>
                                <TextBlock Text="⚙️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock Text="Cài Đặt" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="#1CB5E0" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Cấu hình hệ thống, cài đặt ứng dụng và tùy chọn." 
                                           FontSize="14" 
                                           Foreground="#666666" 
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Demo Section -->
                    <Border Grid.Row="2" Grid.Column="1" 
                            Background="White" 
                            CornerRadius="20" 
                            Margin="10" 
                            Padding="25">
                        <Button Style="{StaticResource {x:Type Button}}" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="DemoInvoice_Click">
                            <StackPanel>
                                <TextBlock Text="🎯" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock Text="Demo Hóa Đơn" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="#FF9800" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Xem mẫu hóa đơn chuyên nghiệp với thiết kế mới." 
                                           FontSize="14" 
                                           Foreground="#666666" 
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>
            </ScrollViewer>
            
            <ContentControl x:Name="MainContentHost" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
