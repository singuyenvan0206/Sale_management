<Window x:Class="WpfApp1.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi Mật Khẩu" Height="270" Width="370" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="280" >
            <TextBlock Text="Tên đăng nhập:" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,15" Height="28"/>

            <TextBlock Text="Mật khẩu cũ:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="OldPasswordBox" Margin="0,0,0,15" Height="28"/>

            <TextBlock Text="Mật khẩu mới:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,20" Height="28"/>

            <Button Content="Đổi Mật Khẩu" Width="140" Height="32" Click="ChangePassword_Click"/>
        </StackPanel>
    </Grid>
</Window>
